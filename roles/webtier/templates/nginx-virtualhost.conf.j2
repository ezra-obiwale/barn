server {
    listen       80;
    server_name  {{ item.value.servernames | join(" ") }};

    root   /var/www/{{ item.key }}/{{ item.value.public_dir_path }};
    index index.{{ item.value.project_type | default('php') }};

    access_log  /var/log/nginx/{{ item.key }}-access.log;
    error_log  /var/log/nginx/{{ item.key }}-error.log error;

    location / {
        try_files $uri $uri/ /index.{{ item.value.project_type | default('php') }}?$args;
    }
    {% if item.value.websocket %}
    location {item.value.websocket.path} {
        proxy_pass http://{{ item.value.websocket.host }}:{{ item.value.websocket.port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
    }
    {% endif %}

    {% if item.value.project_type != 'html' %}
    # pass the PHP scripts to FastCGI server
    #
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass 127.0.0.1:9000;
        # fastcgi_pass unix:/run/php/php7.2-fpm.sock;
    }
    {% endif %}

    underscores_in_headers on;
}
{% for redirect in item.value.redirect %}
server { 
    server_name {{ redirect.from }}; 
    return {{ redirect.code|default(301) }} http://{{ redirect.to }}$request_uri; 
}
{% endfor %}